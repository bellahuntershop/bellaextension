{
  "manifest_version": 3,
  "name": "BH Studio",
  "version": "1.0",
  "description": "Assistant for Etsy shop",
  "icons": {
    "16": "media/icon16.png",
    "128": "media/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["src/page.html"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_title": "Open Workflow"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs", "identity", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
