{
  "manifest_version": 3,
  "name": "BH Studio",
  "version": "1.0",
  "description": "Assistant for Etsy shop",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["page.html"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_title": "Open Workflow"
  },
  "permissions": ["tabs", "identity", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "oauth2": {
    "client_id": "8a5qhudzqivk9ef",
    "scopes": []
  },
  "background": {
    "service_worker": "background.js"
  }  
}
